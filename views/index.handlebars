<section class="content">

    <h1 class="pageHead">Eat Da Burger</h1>

    <div class="burgerListSection">
        <h2 class="divHead">Burgers Available</h2>
        <ul class="burgerList">
            {{#each burgers}}
            {{#unless devoured}}
            <span>{{this.id}} - {{this.burger_name}}</span>
            <button type="button" class="eatburger btn btn-warning" id ="eatbutton" data-id="{{this.id}}" data-newDevoured="{{devour}}"><span class="fa fa-cutlery">Devour</span></button>          
            <hr>
            {{/unless}}
            {{/each}}
        </ul>
    </div>

    <div class="burgerListSection">
        <h2 class="divHead">Endevoured Burger</h2>
        <ul class="burgerList">
            {{#each burgers}}
            {{#if devoured}}
            <span>{{this.id}} - {{this.burger_name}}</span>
            <hr>
            {{/if}}
            {{/each}}
        </ul>
    </div>

  <h2>Add a Burger</h2>
  <form class="create-form">

      <div class="form-group">
          <label for="ca">Burger Name:</label>
          <input type="text" id="ca" name="name">
      </div>
      <button type="submit">Add Burger</button>
  </form>

</section>


